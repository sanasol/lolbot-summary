{
    "name": "your_vendor/telegram-summary-bot",
    "description": "A Telegram bot that summarizes group chats using DeepSeek API.",
    "type": "project",
    "require": {
        "php": ">=8.1",
        "guzzlehttp/guzzle": "^7.0",
        "inspector-apm/neuron-ai": "^1.9",
        "longman/telegram-bot": "^0.80",
        "vlucas/phpdotenv": "^5.5",
      "ext-pdo": "*"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
